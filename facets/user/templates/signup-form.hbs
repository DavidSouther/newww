<hgroup>
  <h1>{{t "user.signup.title" lang}}</h1>
  <h2>{{t "user.signup.subtitle" lang}}</h2>
</hgroup>

{{#if errors}}
  <p class="error">{{t "user.signup.error" lang}}</p>
  <ul>
    {{#each errors}}
      <li>
        <p class="error">{{message}}</p>
      </li>
    {{/each}}
  </ul>
{{/if}}

<form class="login-forms" action="" method="post">
  <label for="name">{{t "user.signup.form.name" lang}}</label>
  <input type="text" id="name" name="name" />
  <p class="help-text">{{t "user.signup.form.nameHelp" lang}}</p>

  <label for="password">{{t "user.signup.form.password" lang}}</label>
  <input type="password" id="password" name="password" />

  <label for="verify">{{t "user.signup.form.verify" lang}}</label>
  <input type="password" id="verify" name="verify" />

  <label for="email-address">{{t "user.signup.form.email" lang}}</label>
  <input type="text" id="email-address" name="email-address" />
  <p class="help-text">{{{t "user.signup.form.emailHelp" lang}}}</p>

  <input type="submit" value="{{t "user.signup.form.submit" lang}}" />

  <input type="hidden" name="crumb" value="{{crumb}}"/>
</form>